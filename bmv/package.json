    "dotenv": "^16.0.1",
    "ethereumjs-util": "^7.1.4",
    "ganache": "^7.3.0",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "truffle": "^5.1.16-truffleLogger.0"
  },
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "^4.6.0"
  }
